@prefix sh: <http://www.w3.org/ns/shacl#> .
#@prefix shr: <http://www.w3.org/ns/shacl/repairs#> .
@prefix : <http://org.shacl.repairs.tests/> .

:FunctionalStateStrategy
    a sh:RepairStrategy;
    sh:repair [
        sh:path :hasState;
        sh:action sh:delete;
        sh:preserveOrder (
            :ViolatedState :FulfilledState :PendingState
        )
    ];
    sh:repair [
        sh:path :hasState;
        sh:action sh:add;
        sh:value :PendingState
    ] .